<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">

  <data>
    <variable name="model" type="jp.pinkikki.account.book.ui.ItemRow"/>
  </data>

  <LinearLayout
      android:orientation="horizontal"
      android:layout_width="match_parent"
      android:layout_height="40dp"
      android:id="@+id/linearLayout" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
      android:weightSum="10"
  >

    <TextView
        android:text="@{model.name}"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/item_name" android:layout_weight="5"
        android:textSize="18sp" android:textAlignment="viewStart" android:layout_marginStart="2dp"
        android:layout_marginRight="3dp" android:layout_marginLeft="3dp"/>
    <TextView
        android:text="@{model.amount}"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/item_amount" android:layout_weight="2"
        android:textSize="18sp" android:textAlignment="viewEnd" android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"/>
    <TextView
        android:text="@{model.date}"
        android:layout_width="0dp"
        android:layout_height="wrap_content" android:id="@+id/item_purchase_date" android:layout_weight="3"
        android:textSize="18sp" android:textAlignment="center" android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"/>

  </LinearLayout>

</layout>
