<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <TextView
      android:layout_width="300dp"
      android:layout_height="30dp"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="@+id/item_list" android:layout_marginTop="10dp"
      android:layout_marginStart="68dp" android:layout_marginBottom="1dp"
      app:layout_constraintBottom_toTopOf="@+id/item_list" android:textStyle="bold"
      android:textSize="24sp" android:textAlignment="viewEnd" android:gravity="end|center_vertical"
      android:id="@+id/sum_item_amount"/>

  <ListView
      android:layout_width="match_parent"
      android:layout_height="0dp"
      app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp" android:layout_marginTop="30dp"
      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
      app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp" android:id="@+id/item_list"
      app:layout_constraintTop_toBottomOf="@+id/sum_item_amount"/>

</androidx.constraintlayout.widget.ConstraintLayout>

